#include <iostream>


using namespace std;

char fieldArr[7][7] = {{' ', ' ', ' ', ' ', ' ', ' ', ' ' }, // this row wont be couted
					             {' ', ' ', ' ', ' ', ' ', ' ', ' ' },
					             {' ', ' ', ' ', ' ', ' ', ' ', ' ' },
					             {' ', ' ', ' ', ' ', ' ', ' ', ' ' },
					             {' ', ' ', ' ', ' ', ' ', ' ', ' ' },
					             {' ', ' ', ' ', ' ', ' ', ' ', ' ' },
					             {' ', ' ', ' ', ' ', ' ', ' ', ' ' }};


void BuildArea()
{
	int a = 0;
	int	b = 0;

	cout << "  " << " " << "1" << " " << " " << "2" << " " << " " << "3" << " " << " " << "4" << " " << " " << "5" << " " << " " << "6" << " " << " " << "7" << " " << endl;

	for (int i = 0; i < 6; i++)
	{
		
		cout << "  ";
		for (int i = 0; i < 7; i++)
		{	
			cout << '(' << fieldArr[a][b] << ')';
			b++;
		}
		cout << endl;
	}
}


int main()
{
	
	BuildArea();

	
	return 0;
}
